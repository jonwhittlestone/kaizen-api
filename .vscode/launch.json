    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading",
            ],
            "django":false
        },
        {
            "name": "Server Tests - tests_providers",
            "type": "python",
            "request": "launch",
            "cwd":"${workspaceFolder}",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "tests.tests_providers"
            ],
            "django":true
        },
    ]
}